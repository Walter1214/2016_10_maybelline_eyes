- var devMode = process.env.NODE_ENV  == 'development'
- function date_now_format() { var date = new Date(); return date.getFullYear() + "_" + ( date.getMonth() + 1 ) + "_" + date.getDate() + "_" + date.getHours() + "_" + date.getMinutes() + "_" + date.getSeconds();     }
- var time = date_now_format();

extends m_master
block head

    //- if !devMode
        //- link(rel="stylesheet", href="asset/css/m_index.css")

    script(defer,src="asset/js/m_activity.js?_v_=#{time}")

block content

    .content

        .background_all
            .background_style.background_style_all
                img(src="~m/step/style_big_fake.png", alt="")
        .home_border

        .treaty_content
            .treaty_space
                img(class="treaty_img",src="../img/activity/treaty.png")
                a(href="https://www.maybelline.com.tw/terms-of-service" target="_blank")
                    img(class="treaty_btn btn_pointer",src="../img/activity/treaty_btn.png",onclick="$.gapv('/style2016/m_rule/privacy_btn');")